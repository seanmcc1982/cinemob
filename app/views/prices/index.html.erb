<% provide(:title, "Prices") %>

<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Pricelabel</th>
      <th>Day</th>
      <th>Hourstart</th>
      <th>Hourend</th>
      <th>Event</th>
      <th>Value</th>
      <th>Addedby</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.pricelabel %></td>
        <td><%= price.day %></td>
        <td><%= price.hourstart %></td>
        <td><%= price.hourend %></td>
        <td><%= price.event %></td>
        <td><%= price.value %></td>
        <td><%= price.addedby %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_price_path %>
