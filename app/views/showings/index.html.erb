<p id="notice"><%= notice %></p>

<h1>Showings</h1>

<table class="catalog">
    <% @showings.each do |showing| %>
      <tr>
        <td>
          <div class="title">
            <%= showing.filmname %>
          </div>
          <div class="slots">
            <%= showing.slot %>
          </div>
          <div class="description">
            <%= showing.screenname %>
          </div>
          <div class="price">
            <%= number_to_currency(showing.price, :unit => "â‚¬") %>
          </div>
        </td>
        <td>
          <div class="links">
            Added By: <%= showing.addedby %>
            <%= link_to 'Show', showing %>
            <%= link_to 'Edit', edit_showing_path(showing) %>
            <%= link_to 'Destroy', showing, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
</table>

