<p id="notice"><%= notice %></p>
<% provide(:title, "Showings") %>

<h1>Showings</h1>

<table>
  <thead>
    <tr>
      <th>Slot</th> 
      <th>Screenname</th>
      <th>Filmname</th>
      <th>Addedby</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showings.each do |showing| %>
      <tr>
        <td><%= showing.slot %></td>
        <td><%= showing.screenname %></td>
        <td><%= showing.filmname %></td>
        <td><%= showing.addedby %></td>
        <td><%= link_to 'Show', showing %></td>
        <td><%= link_to 'Edit', edit_showing_path(showing) %></td>
        <td><%= link_to 'Destroy', showing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Showing', new_showing_path %>
