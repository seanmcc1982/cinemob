<% provide(:title, "Bookings") %>
<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Customeremail</th>
      <th>Showingid</th>
      <th>Seat</th>
      <th>Pricelabel</th>
      <th>Iscancelled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customeremail %></td>
        <td><%= booking.showingid %></td>
        <td><%= booking.seat %></td>
        <td><%= booking.pricelabel %></td>
        <td><%= booking.iscancelled %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
