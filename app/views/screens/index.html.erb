<% provide(:title, "Screens") %>

<p id="notice"><%= notice %></p>

<h1>Screens</h1>

<table>
  <thead>
    <tr>
      <th>Screenname</th>
      <th>Rows</th>
      <th>Width</th>
      <th>Addedby</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.screenname %></td>
        <td><%= screen.rows %></td>
        <td><%= screen.width %></td>
        <td><%= screen.addedby %></td>
        
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_screen_path(screen) %></td>
          <td><%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
        <% if admin_signed_in? %>
<%= link_to 'New Screen', new_screen_path %>
        <% end %>